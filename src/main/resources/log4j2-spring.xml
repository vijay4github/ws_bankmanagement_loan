<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%date] [%level] [%thread{15}] [.\(%file:%line\)] [%mdc] : %msg%n"/>
        </Console>

        <RollingFile name="RollingFile"
                     fileName="../logs/ws_bankmanagement_loan.log"
                     filePattern="../logs/$${date:yyyy-MM}/ws_bankmanagement_loan-%d{MM-dd-yyyy}-%i.log.gz"
                     append="true">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
    <DefaultRolloverStrategy max="5"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
        <Logger name="com.bankmanagement.loan" level="trace"></Logger>
    </Loggers>
</Configuration>